<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.SetupFragment">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/spreadsheetIdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick spreadsheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        />

    <Button
        android:id="@+id/overviewSheetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick overview sheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spreadsheetIdButton"
        />

    <Button
        android:id="@+id/dataSheetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick data sheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/overviewSheetButton"
        />

    <Button
        android:id="@+id/monthlySummarySheetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick monthly sheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dataSheetButton"
        />

    <Button
        android:id="@+id/monthColumnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto-Detect Month Columns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monthlySummarySheetButton"
        />

    <Button
        android:id="@+id/categoriesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto-Detect Categories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monthColumnButton"
        />

</androidx.constraintlayout.widget.ConstraintLayout>