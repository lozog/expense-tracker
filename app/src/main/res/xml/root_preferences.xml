<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/sheet_prefs_header">
        <EditTextPreference
            app:key="google_spreadsheet_id"
            app:title="@string/google_spreadsheet_id_pref_label"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="categories"
            app:title="@string/categories_list_pref_label"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="overview_sheet_name"
            app:title="@string/overview_sheet_name_pref_label"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="data_sheet_name"
            app:title="@string/data_sheet_name_pref_label"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="monthly_summary_sheet_name"
            app:title="@string/monthly_summary_sheet_name_pref_label"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/currency_prefs_header">
        <EditTextPreference
            app:key="currency"
            app:title="@string/currency_pref_label"
            app:useSimpleSummaryProvider="true" />

        <!-- inputType to enforce numeric values is not working -->
        <EditTextPreference
            app:key="exchange_rate"
            app:title="@string/exchange_rate_pref_label"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/history_prefs_header">
        <EditTextPreference
            app:key="history_length"
            android:defaultValue="@string/default_history_length"
            app:title="@string/history_length_pref_label"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>
